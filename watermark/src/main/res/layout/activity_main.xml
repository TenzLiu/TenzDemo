<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_bg"/>

    <Button
        android:id="@+id/btn_watermark_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="watermark center"/>

    <Button
        android:id="@+id/btn_watermark_left_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="watermark left top"/>

    <Button
        android:id="@+id/btn_watermark_right_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="watermark right top"/>

    <Button
        android:id="@+id/btn_watermark_left_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="watermark left bottom"/>

    <Button
        android:id="@+id/btn_watermark_right_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="watermark right bottom"/>

    <Button
        android:id="@+id/btn_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="source"/>

</LinearLayout>